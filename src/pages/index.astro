---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Stats from '~/components/widgets/Stats.astro';

const metadata = {
  title: 'AstroWind â€” Free template for creating websites with Astro + Tailwind CSS',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    tagline="Do you feel safe biking in Syracuse?"
    title="Take our 2024 State of Syracuse Cycling Demographic survey"
    subtitle="Your voice matters."
    actions={[
      { variant: 'primary', text: 'Take the survey!', href: '/StateOfCyclingSurvey24', icon: 'tabler:square-rounded-arrow-right' },
    ]}

  />

<Note body="It should not be a life or death situation to bike" />



  <!-- FAQs Widget ******************* -->
  <Hero
    title="Where does Syracuse rank?"
    subtitle="Data fromPeople For Bikes' 2024 City Ranking"
    actions={[
      { variant: 'secondary', text: "People For Bikes' City Ranking", href: '    https://cityratings.peopleforbikes.org/cities/syracuse-ny', icon: 'tabler:square-rounded-arrow-right' },
    ]}
  />
  <Stats
    stats={[
      { title: 'City rank', amount: '10 / 100' },
      { title: 'Overall city rank', amount: "2203 / 2579" },
      { title: 'Rank in USA', amount: '1964 / 2300' },
      { title: 'Rank in Mid-Atlantic Region', amount: '254 / 309' },
      { title: 'Rank in New York State', amount: '47 / 88' },

    ]}
  />

  <!-- CallToAction Widget *********** -->

</Layout>
